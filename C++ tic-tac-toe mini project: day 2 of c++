#include <iostream>
#include <cmath>
#include <string>
using namespace std;
int main(){
// day 1 of tictac toe game! 
// making a board!
//--------------------- creating 4 dimensional array.
string N0[4][4] = {{" " ,"A" ,"B" ,"C"},
                  {"1" ,"-" ,"-" ,"-" },
                  {"2" ,"-" ,"-" ,"-" },
                  {"3" ,"-" ,"-" ,"-" }
};
//-------------------- iterate through the array.
for(int i = 0; i < 4; i++){
for(int j = 0; j < 4; j++){
cout << N0[i][j] << " ";
}
cout << endl;

}
}
//-------------------- Map user inputs 
